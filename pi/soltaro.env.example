# Qendercore credentials
SOLTARO_USERNAME=YOUR_EMAIL_HERE
SOLTARO_PASSWORD=YOUR_PASSWORD_HERE

# Inverter to read (active)
SOLTARO_HWID=644fc8f0-2a4b-4867-9ce4-b6af0b778fb4

# Poll interval (seconds)
SOLTARO_POLL_SECONDS=300

# Set true if your runtime cannot validate Qendercore TLS chain
SOLTARO_INSECURE_TLS=true

# Local token state file (refresh token rotation)
SOLTARO_STATE_FILE=/home/pi/.soltaro-qendercore-state.json

# Hubitat Maker API
HUBITAT_MAKER_BASE_URL=http://HUBITAT_IP/apps/api/MAKER_APP_ID
HUBITAT_MAKER_TOKEN=YOUR_MAKER_API_TOKEN
HUBITAT_DEVICE_ID=YOUR_VIRTUAL_DEVICE_ID
